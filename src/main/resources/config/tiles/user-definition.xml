<?xml version="1.0" encoding="utf-8" ?>
 <!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<definition name="auth/login" template="/WEB-INF/template/tiles/login_template.jsp">
		<put-attribute name="body" value="/WEB-INF/views/auth/login.jsp" />
	</definition>
	
	<definition name="blankTemplate" template="/WEB-INF/template/tiles/blank_template.jsp">
	</definition>
	
	<definition name="error/*" extends="blankTemplate">
		<put-attribute name="body" value="/WEB-INF/common/error/{1}.jsp" />
	</definition>
	
	<definition name="defaultTemplate" template="/WEB-INF/template/tiles/default/default_template.jsp">
		<put-attribute name="header" value="/WEB-INF/template/tiles/default/header.jsp" />
	</definition>
	
	<definition name="*/*" extends="defaultTemplate">
		<put-attribute name="location" value="{1}/{2}" />
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>

</tiles-definitions>