<?xml version="1.0" encoding="utf-8" ?>
 <!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<!-- 로그인 -->
	<definition name="auth/login" templateExpression="/WEB-INF/template/tiles/login_template.jsp">
		<put-attribute name="body" expression="/WEB-INF/views/skin/${SKIN_INFO.skinCode}/auth/login.jsp" />
	</definition>
	
	<!-- 비어있는 템블릿 - 팝업, 오류 페이지 등 -->
	<definition name="blankTemplate" templateExpression="/WEB-INF/template/tiles/blank_template.jsp">
	</definition>
	
	<!-- 오류 페이지 -->
	<definition name="error/*" extends="blankTemplate">
		<put-attribute name="body" value="/WEB-INF/common/error/{1}.jsp" />
	</definition>
	<!-- 메시지 페이지 -->
	<definition name="message/*" extends="blankTemplate">
		<put-attribute name="body" value="/WEB-INF/common/message/{1}.jsp" />
	</definition>
	
	<!-- 기본 템플릿 -->
	<definition name="defaultTemplate" templateExpression="/WEB-INF/template/tiles/${SKIN_INFO.skinCode}/main_template.jsp">
		<put-attribute name="header" expression="/WEB-INF/template/tiles/${SKIN_INFO.skinCode}/header.jsp" />
	</definition>
	
	<!-- 기본 URL 처리 -->
	<definition name="*/*" extends="defaultTemplate">
		<put-attribute name="location" value="{1}/{2}" />
		<put-attribute name="body" expression="/WEB-INF/views/skin/${SKIN_INFO.skinCode}/{1}/{2}.jsp" />
	</definition>

</tiles-definitions>